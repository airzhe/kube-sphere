apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: example-statefulset
spec:
  replicas: 3
  selector:
    matchLabels:
      app: example-app
  template:
    metadata:
      labels:
        app: example-app
    spec:
      containers:
        - name: example-container
          image: nginx:alpine
          ports:
            - containerPort: 80
              protocol: TCP
          imagePullPolicy: IfNotPresent
  podManagementPolicy: OrderedReady