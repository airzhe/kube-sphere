apiVersion: v1
kind: Service
metadata:
  name: {{releaseName}}-{{serviceName}}
  labels:
    app.kubernetes.io/name: {{serviceName}}
    app.kubernetes.io/instance: {{releaseName}}-{{serviceName}}
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: {{serviceName}}
    app.kubernetes.io/instance: {{releaseName}}-{{serviceName}}